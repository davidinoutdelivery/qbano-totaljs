/*------------------------------------*\
    $CARRITO
\*------------------------------------*/
body
  .listCarrito
    .padd_all
      +below(642px)
        padding 1.3375em 0.8375em
    .cantidad_gaseosa
      .bgbebida
        text-align right
        +below(652px)
          text-align center
        .btnC
          margin 0 0 0 40px

.carIcons
  margin 0
  block()
  .caja
    background-image url('../images/caja.png')

.cont_carrito
  &:after
    clear()
  +below(534px)
    .subtitle h6 .centerBtn a
      padding 9px 13px
      font(15px)
  .wrapper_l
    overflow-y auto
    overflow-x hidden
    block()
  .bg_panelInt
    background rgba(bgcart, .86)
    box()
    margin 0
    padding 0
    .bg_panelInt
      h1
      h3
        color white

.modal-container
  .overlay
    background-color rgba(0, 0, 0, 0.77)
    width 100%
    height 100%
    position fixed
    display block
    top 0
    left 0
    z-index 3

#empty-cart-modal
  padding 20px
  fixed()
  background-color rgba(black, .96)
  top 50%
  max-width 680px
  width 90%
  box()
  left 50%
  margin-right -50%
  right auto
  transform translate(-50%, -50%)
  text-align center
  z-index 9
  h1
    font-size 38px
    text-align center
    +below(642px)
      font(33px)
  p
    font-size 17px
    margin-top 20px
  .buttons
    margin-top 60px

.modal-container
  h1
    color #ffffff !important

.pos_list
  h2
    color white


//TABLE PRODUCT ADDING
.shop_table
  box()
  margin 0
  &:after
    clear()
  tbody
    .cart_item
      .product-thumbnail
        box()
        border-radius 5px
        over()
        block()
        margin 10px 
        img
          max-width 100%
          height 70px
          block()
          margin 0px auto
          +below(765px)
            margin 0 auto
            height 33px
      .product-name
        text-align center
        a
          font-weight 900
          font(15px)
          fontr()
          mayus()
          color black
        li
          relative()
          display inline-block
          margin-right 8px
          padding-right 11px
          font(12px)
          // fontl()
          color #333
      .product-price,
      .product-subtotal
        width 100px
        font-weight 900
        font(15px)
        color #666
      .product-quantity
        .catidad_real
          margin 0 auto
          .restar,
          .mas,
          input
            color black

.sidepanel
  margin 0 0 10px
  padding 14px 18px 7px
  box()
  border 1px solid gray
  h3
    margin 0 0 15px
    font-weight 900
    font(15px)
    mayus()
    color black
  .pagosbtn
    background #f5f5f5 
    a
      block()
      margin-bottom 10px
      text-align center
.bag_total 
  width 100%
  padding-bottom 3px
  tr
    block()
    width 100%
    padding 10px 0 9px
    box()
    mayus()
    line-height 20px
    font-size 11px
    border-top 1px solid #e9e9e9    
    th
      left2()
      border none
      width 50%
      text-align left
      box()
      padding 0 
    td
      border none
      width 50%
      text-align right
      box()
      padding 0 
    &.cart-subtotal td
      font-weight 900
      font-size 14px
      color #666      
      text-align right
      display inline-block
    &.total
      margin-bottom 15px
      &:after
        clear()
      td
        font-weight 900
        font-size 18px
        color #333
      #totalval
        width 50%
        left2()
    &.shipping td
      font-weight 900
      font-size 14px
      color #cc3333


//LIST ADDING IN CART
.list_adding_cart
  block()
  &:after
    clear()
  li:last-child
    &:before
      none()
  li
    block()
    background backgroundColorGray
    box()
    padding 10px 14px
    relative()
    color primaryColorText
    +below(642px)
      padding 10px
    &:before
      width 97%
      height 2px
      background white
      content ''
      absolute()
      bottom 0
      left 0
      right 0
      margin auto
    &:after
      clear()
    img
      width 65%
    .txtPdo
      +below(642px)
        width 86%
    h3
      fontb()
      font(23px)
      color primaryColorText
      +below(642px)
        margin 0 0 2px
        block()
        font(22px)
    h4
      fontr()
      font(19px)
      inline()
      +below(320px)
        font(16px)
        margin 0
    .txt_right
      +below(642px)
        position initial
    .adition_list
      +below(642px)
        block()
        padding 0
    .ading-tag
      font(13px)
    .catidad_real
      margin 8px auto
      right2()
      +below(642px)
        left2()
        margin 7px 15px 6px 0px
      .cantidad
        height 30px
        background white 
        border none
        color primaryColorText
      .mas,
      .restar
        border none
        height 30px
        line-height 31px
        font-size 11px
        color primaryColorText
    .txt_right
      padding 10px 0
    //Aditionas
    .slowDetails
      inline()
      color black
      font(13px)
      box()
      padding 14px 0
      +below(642px)
        block()
      i
        margin-right 5px
        +below(642px)
          margin-right 3px
    .bgAditionals
      none()
      background #fbfbfb
      margin 10px 0 0
      &:after
        clear()
      .columns
        box()
        padding 11px 13px 
      .adition_list
        block()
        &:after
          clear()
        h3
          mayus()
          font(16px)
          margin 0 0 3px
        .ading-tag
          padding 2px 0
    .elimnar_ico
      +below(642px)
        margin 17px 0 0
        relative()
      i
        color primaryColorText
        border 2px solid primaryColorText

.elimnar_ico
  relative()
  inline()
  cursor pointer
  +below(624px)
    absolute()
    z-index 4
    top 10px
    right 7px
  i
    width 25px
    height 25px
    line-height 25px
    border 2px solid primaryColorText
    background transparent
    border-radius 50%
    display inline-block
    margin 0px 5px 
    color primaryColorText
    text-align center
    font(14px)
    box-shadow 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12)     
    




//Modal Promocion Adding
.modalPromo
  block()
  relative()
  box()
  padding 30px 0
  text-align center
  &:after
    clear()
  h1
    fontb()
    font(26px)
    mayus()
    color primaryColorText
    block()
    margin 20px 0 5px
    +below(642px)
      margin 28px 0 5px
  p
    margin 0 0 25px
    letter-spacing .4px
    block()
  .closebtnM
    fontb()
    font(14px)
    mayus()
    color primaryColor
    margin 0 30px
    trans(.4s)
    text-align center
    block()
    sub()      
  .check_modal
    block()
    relative()
    margin 0 12px 20px
    &:after
      clear()
    input[type=radio] 
      visibility hidden
      none()
    label
      width 100%
      height auto
      margin 0 
      padding 0
      text-align center
      trans(.4s)
      cursor default
      &:before
      &:after
        none()
      &:hover
        opacity .8
      .img
        relative()
        over()
        block()
        margin 0 0 10px
        &:after
          clear()
        +below(642px)
          margin 0
        .mask
          opacity 0
          flex()
          visibility hidden
          font(30px)
          color white
        img
          block()          
          width 100%
          min-height 298px
      .tittle
        text-align center
        h2
          block()
          padding 5px 10px 1px
          fontb()
          color primaryColorText
          font(21px)
          +below(642px)
            font(19px)
            padding 10px 8px
      .cart_ico
        background-color primaryColor
        padding 10px 12px 10px 10px
        border-radius 6px
        margin 11px 0 8px
        inline()
        color white
        span
        font(14px)
    input[type=radio]:checked + label 
      border none
      background-color transparent      
      width 100%
      height auto
      .img
        .mask
          opacity 1
          visibility visible
          



