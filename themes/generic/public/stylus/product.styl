/*------------------------------------*\
    $PRODUCTOS
\*------------------------------------*/
.row
  &:after
    clear()

.masonry-brick
    box()
    padding 0.9375em
  .masonry-brick.loaded
    block()
    
/*Breadcrumnd*/
.breadcrumb
  width 100%
  min-height 10px 
  over()
  block()
  block()
  margin 19px 0 11px
  box()
  border-bottom 1px solid primaryColor
  &:after
    clear()
  li:nth-child(1)
    &:before
      none()
    a
      padding  0 10px 0 0
      margin 0 5px 0 0
  li:last-child
    > a
      font-weight bold
  li
    display inline-block    
    &:before 
      box()
      content ''
      display inline-block
      font-family "FontAwesome"
      font-style normal
      font-weight normal
      line-height 1
      -webkit-font-smoothing antialiased
      -moz-osx-font-smoothing grayscale
      content "\f105"
      color primaryColor
    a
      color primaryColor
      padding 5px 10px
      margin 3px 0
      fontr()
      font(13px)
      box()
      display inline-block
      trans(.3s)
      +below(330px)
        font(13px)
      &:hover
        color primaryColor
        sub()

/*Destacados*/
.destacados
  &:after
    clear()
  .grid-item
    box()
    padding 0.9375em
    left2()
  .bg_panel
    margin 0 0 20px
    block()
    // over()
    border-radius 0
    background white
    text-align center
    cursor pointer
    &:after
      clear()
    &:hover
      opacity 1
    .mask
      background rgba(primaryColor, .75)
      transform scale(1.2)
      opacity 0
      visibility hidden
      flex()
      i
        color primaryColor
        font(30px)
    .imgbg
      height auto
      width 100%
      over()
      relative()
      block()
      background white
      margin 0 0 14px
      border-radius 10px
      &:after
        clear()
      +below(642px)
        height auto
      img
        height auto
        width 100%
        margin 0 auto
        box()
        padding 0
        trans(.3s)
        +below(642px)
          height auto
          width 100%
          block()
    .tituloDest
      box()
      width 100%
      padding 0
      relative()
      block()
      h2
        color primaryColorTitle
        fontb()
        font(18px)
        line-height 30px
        text-align left
    p
      text-align justify
      box()
      padding 8px 0 0
      margin 0 auto 9px
      block()
      line-height 18px
      height 50px
      over()
      font(14px)
      relative()
      color primaryColorText
      +below(642px)
        height auto
        margin 0 auto 16px
    .contAction
      box()
      padding 2px 0 10px
      margin 0px auto
      block()
      relative()      
      &:before
        absolute()
        width 20px
        height 1px
        content ''
        left 0
        background primaryColorText
        bottom 4px
      &:after
        clear()
      h3
        color primaryColorText
        fontb()
        font(20px)
        mayus()
        box()
        padding 0
        text-align left
    .addProduct
      font(13px)
      height 35px
      line-height 34px
    //Producto no disponible
    &.available      
      .mask
        transform scale(1)
        opacity 1
        visibility visible
        text-align center
        background transparent
        h5
          fontb()
          color primaryColorTitle
          block()
          opacity .7
          font(15px)
        i
          opacity .7
          font(32px)
          color primaryColorTitle
          margin 0 auto 5px
          block()
      .imgbg       
        img
        .img
          -webkit-filter blur(5px) //grayscale(75%) 
          filter blur(5px) //grayscale(75%)
          opacity .3
      h2,
      .contAction
        opacity .3
        -webkit-filter //grayscale(83%) 
        filter //grayscale(83%)
  //Isotope
  &.gridIso
    .grid-item
      left2()
      box()
      padding 17px 17px 20px
      .bg_panel
        .imgbg
          img
            width auto
            max-width 100%
            height 200px
            margin 0 auto
            block()
            +below(642px)
              height 198px
    .grid-sizer,
    .grid-item
      width 33.3%
      +below(800px)
        width 50%
      +below(642px)
        width 100%

.div-alertGeo
  none()
  relative()
  margin 0px -20px 20px -20px
  &.open
    block()
    .alertGeo
      bottom 100%
      left 0
      width 100%
      height 70px
      background green
      z-index 2
      color white
      flex()
      text-align center
      opacity 0
      trans(.4s)
      opacity 1
      top 0
    .loader
      border 6px solid rgba(white, .43)
      border-top 6px solid white
      border-radius 50%
      width 13px
      height 13px
      margin 0 12px
      animation spin 2s linear infinite
    @keyframes spin
      0%
        transform rotate(0deg)
      100%
        transform rotate(360deg)