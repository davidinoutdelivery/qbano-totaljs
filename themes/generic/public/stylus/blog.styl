/*------------------------------------*\
    $BLOCG
\*------------------------------------*/
.blogFeature
  block()
  &:after
    clear()
  .columFets
    box()
    padding 17px 17px 20px
    &:after
      clear()
  .panel
    background backgroundColorGray
    trans(.4s)
    block()
    margin 0
    &:hover
      box-shadow 0 2px 3px 0 rgba(0,0,0,0.07)
      .txt
        i
          right 27px
    .img
      width 100%
      height 100px
      background-size cover
      background-repeat no-repeat
      background-position center
      none()
    img
      width 100%
      block()
    .txt
      block()
      padding 20px 30px
      relative()
      &:after
        clear()
      h2
        fontb()
        block()
        color black
        font(20px)
        margin 0 0 5px
      p
        block()
        margin 0
      i
        background white
        border-radius 5px 
        color black
        text-align center
        width 30px
        height 35px
        line-height 35px
        absolute()
        font(20px)
        top 0
        bottom 0
        margin auto
        right 30px
        trans(.3s)
  //Panel Destacados
  .infoBlogbg
    box()
    padding 26px 30px
    &:after
      clear()
  h1
    font(33px)
    line-height 35px
    width 80%
    margin 15px 0 20px
    block()
  h2
    font(23px)
    margin 0 0 10px
    block()
  hr
    margin 34px 0
    block()
    opacity .5
  .list
    block()
    &:after
      clear()
    li
      block()
      margin 0 0 18px
      p
        margin 0
        block()
        font(16px)
        letter-spacing .6px
        line-height 23px
  /*Buscador*/
  .bg_search
    block()
    relative()
    box()
    padding 0px
    &:after
      clear()
    form
      width 100%
      fieldset
        width 100%
        block()
        input
          width 100%
          text-align left
          font(17px)
          border-radius 500px
          margin 0
  /*Redes share*/
  .redes_searsh
    trans(.4s)
    margin 16px 0 25px
    a
      width 38px
      height 38px
      line-height 38px
      border-radius 50%
      text-align center
      inline()
      relative()
      color white
      margin 0 4px
      font(19px)
      box()
      trans(.4s)
      &.face
        background rgb(81, 116, 194)
      &.twittr
        background rgb(22, 156, 226)
      &.instagram
        background #f09433
        background -moz-linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%)
        background -webkit-linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%)
        background linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%)
      &:hover
        transform translateY(-3px)
      &:before
        background-color black
        left 0
        margin-left -19px
        width 59px
      &:after
        border-top 5px solid hsla(black,.9)
        


