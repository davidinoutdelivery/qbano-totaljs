//DETAIL
body 
  .detailBlog
    &:after
      clear()
    //Slider
    .sliderBlog
      relative()
      min-height auto
      li
        min-height auto
      .owl-nav
        .owl-prev,
        .owl-next
          color white
          font(30px)
          absolute()
          height 40px
          line-height 40px
          background transparent
          top 0
          bottom 0
          margin auto
          z-index 3
        .owl-prev
          left 20px
          +below(642px)
            left 5px
        .owl-next
          right 20px  
          +below(642px)
            right 5px
      .owl-dots
        absolute()
        z-index 3
        bottom 20px
        width 100%
        text-align center
        +below(642px)
          bottom 8px
        .owl-dot 
          span
            width 35px
            height 4px
            background rgba(white, .6)
          &.active
            span
              background white
    //Info Article
    h2
      font(30px)  
      fontb()
      color primaryColor
      letter-spacing -.02em
      margin 0 0 10px
      block()
      +below(642px)
        font(26px)
    p
      line-height 25px
      margin 0 0 20px
      color black
    img
      width 100%
    .txt
      block()
      box()
      padding 55px 95px
      &:after
        clear()
      +below(642px)
        padding 35px 36px
    //Image text
    .imageColumnText
      block()
      &:after
        clear()
      .txt
        +below(800px)
          padding 25px 67px
        +below(642px)
          padding 25px 36px
    //Image
    .imageColumn
      block()
      padding 20px 0
      &:after
        clear()
      .columns
        box()
        padding 0 20px
        +below(642px)
          padding 0 14px 20px
    //Video
    .videoBlog
      block()    
      over()
      relative()
      &:after
        clear()
      .mask
        flex()
        i
          font(45px)
          color white
          margin 0px auto
          inline()
          trans(.4s)
          -webkit-animation scaleslide 2s infinite
          width 65px
          height 65px
          line-height 65px
          background rgba(black, .6)
          text-align center
          border-radius 50%
      img
        width 100%
        
